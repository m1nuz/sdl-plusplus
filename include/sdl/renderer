// -*- C++ -*-

#pragma once

#include <cstdint>

namespace sdl {
    namespace detail {
        class window;

        class renderer final {
        public:
            renderer(const window &_w);
            ~renderer();

            renderer& software();
            renderer& accelerated();
            renderer& vsync();
            renderer& target_texture();
            renderer& create();

            renderer& clear();
            renderer& present();
        public:
            void *id;
            uint32_t flags;
            const window& w;
        };
    } // namespace detail
} // namespace sdl
